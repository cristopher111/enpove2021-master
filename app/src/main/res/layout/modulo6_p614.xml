<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_6_p614"/>
    <!--
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/modulo_6_p613_ind"/>
         -->
    <RadioGroup
        android:id="@+id/mod6_614_radiogroup_C6_P614"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <RadioButton
            android:id="@+id/mod6_614_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p614_sp1"/>
        <RadioButton
            android:id="@+id/mod6_614_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p614_sp2"/>
        <RadioButton
            android:id="@+id/mod6_614_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p614_sp3"/>
        <RadioButton
            android:id="@+id/mod6_614_rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p614_sp4"/>
        <RadioButton
            android:id="@+id/mod6_614_rb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p614_sp5"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/margen_medium"
        android:layout_height="@dimen/altura_input_solo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_small"
            android:layout_marginRight="@dimen/margen_medium"
            android:text="@string/modulo_6_p614_sp6"/>
        <EditText
            android:id="@+id/mod6_614_edittext_C6_P614"
            android:layout_width="@dimen/longitud_input_n_horas"
            android:layout_height="@dimen/altura_input_especifique"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/input_text_enabled"/>
    </LinearLayout>

</LinearLayout>