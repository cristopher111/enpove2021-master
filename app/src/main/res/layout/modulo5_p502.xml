<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_5_p502"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margen_small"
        android:padding="@dimen/margen_medium"
        android:background="@drawable/marco_subpregunta">
        <AutoCompleteTextView
            android:id="@+id/mod5_502_autocompletetextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_small"
            android:inputType="text"
            android:hint="Escriba el nombre de la carrera"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/margen_small"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mod5_c502_txtCodigoCarrera"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:hint="CODIGO"
                android:gravity="center"
                android:textSize="@dimen/margen_medium"
                android:background="@drawable/input_text_enabled"
                android:layout_marginRight="@dimen/margen_small"/>
            <TextView
                android:id="@+id/mod5_c502_txtNombreCarrera"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:hint="NOMBRE DE LA CARRERA"
                android:gravity="center"
                android:paddingLeft="@dimen/margen_small"
                android:background="@drawable/input_text_enabled"/>
        </LinearLayout>
        <EditText
            android:layout_marginTop="@dimen/margen_small"
            android:id="@+id/mod5_502_edittext_C5_P502_o"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:paddingLeft="@dimen/margen_small"
            android:inputType="text"
            android:enabled="false"
            android:layout_margin="@dimen/margen_small"
            android:hint="Especifique"
            android:background="@drawable/input_text_disabled"
            />
    </LinearLayout>
