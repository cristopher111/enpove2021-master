<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item_visita_encuestador_cardview"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="48dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp">
        <TextView
            android:id="@+id/item_visita_encuestador_numero"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_width="@dimen/longitud_input_n"
            android:text="@string/visita_numero"/>
        <TextView
            android:id="@+id/item_visita_encuestador_fecha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/visita_fecha"/>
        <TextView
            android:id="@+id/item_visita_encuestador_hora_inicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:text="@string/visita_de"/>
        <TextView
            android:id="@+id/item_visita_encuestador_hora_final"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:text="@string/visita_a"/>
        <TextView
            android:id="@+id/item_visita_encuestador_prox_fecha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:text="@string/visita_fecha"/>
        <TextView
            android:id="@+id/item_visita_encuestador_prox_hora"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:text="@string/visita_hora"/>
        <TextView
            android:id="@+id/item_visita_encuestador_resultado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/visita_resultado_visita"/>
    </LinearLayout>

</android.support.v7.widget.CardView>