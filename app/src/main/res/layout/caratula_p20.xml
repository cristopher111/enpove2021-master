<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/cabecera_pregunta_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
            <EditText
                android:id="@+id/caratula_p20"
                android:layout_width="@dimen/longitud_input_n_horas"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:gravity="center"
                android:enabled="false"
                android:inputType="number"
                android:background="@drawable/input_text_disabled"/>
    </LinearLayout>
</LinearLayout>