<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/dialog_agregar_pregunta_lyt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:focusableInTouchMode="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/greyBluePrimaryDark">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_live_help_white_24dp"
                android:paddingStart="360dp"
                android:paddingVertical="2dp"
                android:paddingLeft="350dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="text"
                android:textColor="@color/colorIcons"
                android:textStyle="bold"
                android:text="AGREGAR PREGUNTA"
                android:gravity="center"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TemaTextoPregunta"
            android:text="PREGUNTA:"/>
        <LinearLayout
            android:background="@drawable/fondo_edit_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:padding="5dp">
            <EditText
                android:id="@+id/dialog_agregar_pregunta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:gravity="top"
                android:maxLength="1000"
                android:padding="5dp"
                android:hint="Ingrese Pregunta..."
                android:background="@drawable/fondo_blanco"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>