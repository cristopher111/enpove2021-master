<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MarcoActivity">
    <include layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <TextView
            android:textColor="@color/icons"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/texto_medium"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_toolbar"
            android:background="@color/colorPrimary"
            android:text="@string/nombre_encuesta"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margen_small"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/margen_small"
                android:background="@drawable/marco_pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margen_small">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AÃ‘O"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="1dp"
                            android:layout_height="@dimen/altura_spinner">
                            <Spinner
                                android:id="@+id/marco_sp_anio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/margen_small">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/marco_mes"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="1dp"
                            android:layout_height="@dimen/altura_spinner">
                            <Spinner
                                android:id="@+id/marco_sp_mes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_small">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margen_small">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/marco_periodo"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="1dp"
                            android:layout_height="@dimen/altura_spinner">
                            <Spinner
                                android:id="@+id/marco_sp_periodo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/margen_small">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NRO SEGMENTO"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="1dp"
                            android:layout_height="@dimen/altura_spinner">
                            <Spinner
                                android:id="@+id/marco_sp_zona"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/marco_btnFiltrar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="filtrar"
                        android:textColor="@color/colorIcons"
                        android:paddingHorizontal="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:drawableLeft="@drawable/baseline_filter_alt_white_36dp"
                        android:background="@drawable/borde_button"
                        />
                    <Button
                        android:id="@+id/marco_btnMotrarTodo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ver TODO"
                        android:textColor="@color/colorIcons"
                        android:paddingHorizontal="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:drawableLeft="@drawable/baseline_table_view_white_36dp"
                        android:background="@drawable/borde_button"/>
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/header_item_vivienda"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_encuestado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>