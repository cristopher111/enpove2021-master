<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ExportarActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/txt_titulo_exportar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="MODULO EXPORTACION"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                 android:textSize="20sp"
                android:textColor="@color/icons"
                android:background="@color/colorPrimary"
                tools:ignore="RtlCompat" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_exportacion_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_message_white_24dp"
                android:visibility="gone"
                android:tint="@color/colorPrimary"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_exportacion_cerrar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:src="@drawable/baseline_close_white_24dp"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_subtitulo_exportar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Exportacion)"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:textColor="@color/icons"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:visibility="gone"/>
        <include layout="@layout/header_item_vivienda"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/exportacion_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/exportacion_progreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/exportacion_txtMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exportando..."
            android:gravity="center"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="40dp">
            <Button
                android:id="@+id/exportacion_tablet_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="EXPORTAR TABLET"
                android:textColor="@color/colorIcons"
                android:textSize="20sp"
                android:paddingHorizontal="40dp"
                android:layout_marginHorizontal="10dp"
                android:drawableLeft="@drawable/baseline_folder_special_white_36dp"
                android:background="@drawable/borde_button"/>
            <Button
                android:id="@+id/exportacion_servidor_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="EXPORTAR SERVIDOR"
                android:textColor="@color/colorIcons"
                android:textSize="20sp"
                android:paddingHorizontal="40dp"
                android:layout_marginHorizontal="10dp"
                android:drawableLeft="@drawable/baseline_cloud_upload_white_36dp"
                android:background="@drawable/borde_button"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>