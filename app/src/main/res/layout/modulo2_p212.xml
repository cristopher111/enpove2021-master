<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:visibility="gone"
    android:background="@drawable/marco_pregunta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/TemaTextoPregunta"
            android:text="212.PERSONA SELECCIONADA PARA LA PRUEBA COGNITIVA"/>
        <ImageView
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/estrella">
        </ImageView>
    </LinearLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Solo para personas de 12 Años y más)"/>
    <CheckBox
        android:id="@+id/mod2_212_checkbox_C2_P212"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Activar"/>

</LinearLayout>