<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_3_p315"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_ind"/>
    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp1"/>
    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp2"/>
    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp3"/>
    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp4"/>
    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp5"/>
    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp6"/>
    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp7"/>

    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp8"/>
    <CheckBox
        android:id="@+id/mod3_315_checkbox_C3_P315_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp9"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/mod3_315_checkbox_C3_P315_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:text="@string/modulo_3_p315_sp10"/>
        <EditText
            android:id="@+id/mod3_315_edittext_C3_P315_O"
            style="@style/TemaInputEspecifique"/>
    </LinearLayout>

</LinearLayout>