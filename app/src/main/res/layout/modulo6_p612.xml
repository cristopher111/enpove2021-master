        android:id="@+id/mod6_612_radiogroup_C6_P612"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margen_small"
        android:layout_height="wrap_content">
        <RadioButton
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/mod6_612_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:text="@string/modulo_6_p612_sp1"/>
        <RadioButton
            android:id="@+id/mod6_612_rb2"
            android:layout_width="wrap_content"
