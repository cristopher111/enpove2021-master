            android:id="@+id/mod6_612_rb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p612_sp6"/>
        <RadioButton
            android:id="@+id/mod6_612_rb7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p612_sp7"/>
