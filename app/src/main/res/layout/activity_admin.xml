<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.admin.AdminActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="@dimen/margen_medium">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENÃš ADMINISTRADOR"
            android:gravity="center"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:textSize="32sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margen_large"
            android:src="@drawable/logo_inei_blanco"/>
        <Button
            android:id="@+id/btnCargarMarco"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="CARGAR MARCO"
            android:textColor="@color/colorIcons"
            android:paddingHorizontal="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:drawableLeft="@drawable/baseline_folder_open_white_24dp"
            android:background="@drawable/borde_button"/>
        <Button
            android:id="@+id/btnCargarUsuario"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="CARGAR USUARIOS"
            android:textColor="@color/colorIcons"
            android:paddingHorizontal="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:drawableLeft="@drawable/ic_person_add"
            android:background="@drawable/borde_button"/>
        <Button
            android:visibility="gone"
            android:id="@+id/btnExportaBD"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="EXPORTAR BD"
            android:layout_marginBottom="@dimen/margen_small"
            android:theme="@style/RaisedButtonDark"/>
        <Button
            android:id="@+id/btnHorarioAsistencia"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="HORARIO ASISTENCIA"
            android:visibility="gone"
            android:theme="@style/RaisedButtonDark"/>
        <Button
            android:id="@+id/btnSalir"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="SALIR"
            android:textColor="@color/colorIcons"
            android:paddingHorizontal="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:drawableLeft="@drawable/baseline_close_white_24dp"
            android:background="@drawable/borde_button"/>
    </LinearLayout>
</LinearLayout>