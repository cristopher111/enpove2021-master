            android:id="@+id/mod5_510_sp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_5_p510_sp5"/>
    </RadioGroup>
    <EditText
        android:id="@+id/mod5_510_edittext_C5_P510_O"
        style="@style/TemaInputEspecifiqueRadioIntermedio"
        android:layout_alignStart="@+id/mod5_510_radiogroup_C5_P510"
