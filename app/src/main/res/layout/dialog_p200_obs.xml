<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/dialog_p200_obs_ingresos"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimaryTransparente"
                android:textSize="@dimen/margen_large"
                android:textStyle="bold"
                android:text="@string/p200_obs"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/greyBluePrimaryDark">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/colorIcons"
                    android:textStyle="bold"
                    android:text="HOGAR NO MIXTO"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|center"
                android:textColor="@color/colorPrimaryTransparente"
                android:textStyle="bold"
                android:theme="@style/TemaTextoPregunta"
                android:text="CONSULTA A HOGAR SIN PERCEPCIÃ“N  DE INGRESOS"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margen_small">
                    <LinearLayout
                        android:background="@drawable/fondo_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:padding="5dp">
                        <EditText
                            android:id="@+id/edtObservaciones_p200_ingresos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:maxLength="1000"
                            android:padding="5dp"
                            android:background="@drawable/fondo_blanco"
                            android:layout_margin="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>
</LinearLayout>