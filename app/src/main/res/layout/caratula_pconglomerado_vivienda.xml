<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_small"
    android:background="@color/greyBluePrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/caratula_conglomerado"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/greyBluePrimary"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/caratula_txt_conglomerado"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="0000000000"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_text_enabled"
                    tools:ignore="RtlCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/greyBluePrimary"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/caratula_numero_seleccion_vivienda"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/greyBluePrimary"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/caratula_txt_nroseleccion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="0000000000"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_text_enabled"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/caratula_tipo_seleccion"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/greyBluePrimary"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/caratula_txt_tipseleccion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="URBANO"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_text_enabled"
                    tools:ignore="RtlCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/greyBluePrimary"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/caratula_vivienda_remplazo"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/greyBluePrimary"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/caratula_txt_vivreemplazo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="SI"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_text_enabled"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/caratula_vivienda_por_remplazar"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/greyBluePrimary"
                    android:gravity="center_vertical"/>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <Spinner
                        android:id="@+id/caratula_sp_vivreemplazo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawSelectorOnTop="true" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>