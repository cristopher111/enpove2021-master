<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.agregacion.AgregarPersonaActivity">
    <include layout="@layout/layout_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margen_medium"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/agregar_personas_lyt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margen_small"
                android:padding="@dimen/margen_medium"
                android:orientation="vertical"
                android:background="@drawable/marco_pregunta">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_3_p318_cab1"
                    style="@style/TemaTextoPregunta"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margen_small">
                    <Spinner
                        android:id="@+id/agregar_persona_sp_parentesco"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/altura_spinner"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/modulo_3_p318_array_parentesco"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/agregar_personas_lyt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/margen_small"
                android:padding="@dimen/margen_medium"
                android:orientation="vertical"
                android:background="@drawable/marco_pregunta">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_3_p318_cab2"
                    style="@style/TemaTextoPregunta"/>
                <RadioGroup
                    android:id="@+id/agregar_persona_rg_sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margen_medium"
                        android:text="@string/modulo_3_p318_sexo_op1"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/modulo_3_p318_sexo_op2"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/agregar_personas_lyt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/margen_small"
                android:padding="@dimen/margen_medium"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/marco_pregunta">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margen_small"
                    android:text="@string/modulo_3_p318_cab3"
                    style="@style/TemaTextoPregunta"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margen_small"
                    android:text="@string/modulo_3_p318_cab3_descripcion"
                    />
                <EditText
                    android:id="@+id/agregar_persona_edt_edad"
                    android:inputType="numberPassword"
                    android:layout_width="96dp"
                    android:paddingLeft="@dimen/margen_small"
                    android:layout_height="@dimen/altura_input_especifique"
                    android:background="@drawable/input_text_enabled"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/agregar_personas_lyt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margen_small"
                android:visibility="gone"
                android:padding="@dimen/margen_medium"
                android:orientation="vertical"
                android:background="@drawable/marco_pregunta">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_3_p318_cab4"
                    style="@style/TemaTextoPregunta"/>
                <RadioGroup
                    android:id="@+id/agregar_persona_rg_sino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margen_medium"
                        android:text="@string/modulo_3_p318_12meses_si"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/modulo_3_p318_12meses_no"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
