<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:id="@+id/modulo1_p111_titulo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_1_p111"/>
      <RadioGroup
        android:id="@+id/mod1_p111_radiogroup_C1_P111"
          android:orientation="horizontal"
        style="@style/EstiloRadioGroup">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_1_p111_sp1"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:text="@string/modulo_1_p111_sp2"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/mod1_p111a_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margen_layout_pregunta"
            android:padding="@dimen/padding_layout_pregunta"
            android:background="@drawable/marco_pregunta">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TemaTextoPregunta"
                android:layout_marginBottom="8dp"
                android:text="@string/modulo_1_p111A"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/mod1_111a_edittext_C1_P111a"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:hint="Especifique"
                style="@style/TemaInputEspecifiqueRadioNumber"/>
        </LinearLayout>

</LinearLayout>