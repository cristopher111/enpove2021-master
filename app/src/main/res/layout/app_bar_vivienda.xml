<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.EncuestaActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/icons"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fragment_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/boton_anterior"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@color/colorIcons"
                android:textSize="@dimen/texto_small"
                android:padding="@dimen/margen_small"
                android:layout_marginLeft="@dimen/margen_small"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:text="Anterior"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/boton_siguiente"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@color/colorIcons"
                android:textSize="@dimen/texto_small"
                android:layout_height="match_parent"
                android:text="Siguiente"
                android:layout_marginRight="@dimen/margen_small"
                android:padding="@dimen/margen_small"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>