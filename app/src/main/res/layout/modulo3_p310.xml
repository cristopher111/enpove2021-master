<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/TemaTextoPregunta"
            android:text="@string/modulo_3_p310"/>


    </LinearLayout>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:layout_height="32dp">

    <Spinner
        android:id="@+id/mod3_310_spinner_C3_P310_E"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:hint="@string/modulo_3_p310_sp1" />
</android.support.v7.widget.CardView>
    <EditText
        android:inputType="textCapCharacters"
        android:maxLength="50"
        android:layout_marginTop="@dimen/margen_small"
        android:id="@+id/text1_Editext"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="@dimen/margen_small"
        android:enabled="false"
        android:layout_margin="@dimen/margen_small"
        android:background="@drawable/input_text_disabled"
        android:visibility="gone"
        android:hint="Especifique"/>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/margen_medium"/>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:layout_height="32dp">
    <Spinner
        android:id="@+id/mod3_310_spinner_C3_P310_M"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/modulo_3_p310_sp2"/>
</android.support.v7.widget.CardView>
    <EditText
        android:inputType="textCapCharacters"
        android:maxLength="50"
        android:layout_marginTop="@dimen/margen_small"
        android:id="@+id/text2_Editext"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="@dimen/margen_small"
        android:enabled="false"
        android:layout_margin="@dimen/margen_small"
        android:background="@drawable/input_text_disabled"
        android:hint="Especifique"/>

</LinearLayout>